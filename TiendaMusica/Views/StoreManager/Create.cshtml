@model Guis.TiendaMusica.Entidades.Tienda.Album

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Album</legend>

        <div>
            @Html.LabelFor(model => model.GenreId, "Genre", new {@class="control-label col-md-2" })
