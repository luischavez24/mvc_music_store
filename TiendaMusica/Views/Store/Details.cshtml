@model Guis.TiendaMusica.Entidades.Tienda.Album

@{
    ViewBag.Title = "Details";
}

<h2>Album: @Model.Title</h2>

<p>
    <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
</p>

<div id="album-details">
    <p>
        <em>Genre: </em> @Model.NameGe
    </p>
    <p>
        <em>Artist: </em> @Model.NameAr
    </p>
    <p>
        <em>Price: </em> @Model.Price
    </p>
    <p>
        @Html.ActionLink("Añadir al carrito", "AddToCart", "ShoppingCart", new {id= @Model.AlbumId})
    </p>
</div>
